# Kafka Broker Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Security Configuration
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=SCRAM-SHA-256

# Client Credentials (created via kafka-configs.sh)
KAFKA_SASL_USERNAME=client_app_1
KAFKA_SASL_PASSWORD=client_app_secret

# SSL Configuration
# Path to the CA certificate (PEM format)
KAFKA_SSL_CA_LOCATION=../../secrets/ca-cert.pem

# Optional: Disable hostname verification only for local development with self-signed certs
# In production, this SHOULD be True
KAFKA_SSL_VERIFY=True
